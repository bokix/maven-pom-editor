{
  "name": "maven-pom-editor",
  "displayName": "Maven POM Editor",
  "description": "Advanced Maven POM editor with dependency hierarchy visualization",
  "version": "0.0.2",
  "publisher": "Bokix",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "maven",
    "pom",
    "xml",
    "dependency",
    "java",
    "build",
    "maven-pom",
    "dependency-management",
    "dependency-tree"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bokix/maven-pom-editor.git"
  },
  "bugs": {
    "url": "https://github.com/bokix/maven-pom-editor.git/issues"
  },
  "homepage": "https://github.com/bokix/maven-pom-editor",
  "galleryBanner": {
    "color": "#2B5797",
    "theme": "dark"
  },
  "activationEvents": [
    "onCustomEditor:mavenPomEditor.editor",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "mavenPomEditor.editor",
        "displayName": "Maven POM Editor",
        "selector": [
          {
            "filenamePattern": "pom.xml"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "mavenPomEditor.clearCache",
        "title": "Maven POM Editor: Clear All Cache"
      },
      {
        "command": "mavenPomEditor.showCacheStats",
        "title": "Maven POM Editor: Show Cache Statistics"
      }
    ],
    "taskDefinitions": [
      {
        "type": "maven",
        "required": [
          "goal"
        ],
        "properties": {
          "goal": {
            "type": "string",
            "description": "The Maven goal to execute (e.g., clean, compile, test, package, install)"
          },
          "pomFile": {
            "type": "string",
            "description": "Path to the pom.xml file"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  }
}

